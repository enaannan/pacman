{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "request": "launch",
            "program": "${command:cmake.launchTargetPath}",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${command:cmake.launchTargetDirectory}",
            "environment": [
                {
                    "name": "PATH",
                    "value": "$PATH:${command:cmake.launchTargetDirectory}"
                }
            ],
            "console": "internalConsole",
            "linux" : {
                "type": "cppdbg",
                "MIMode": "gdb",
                "setupCommands": [
                    {
                        "description": "Enable pretty-printing for gdb",
                        "text": "-enable-pretty-printing",
                        "ignoreFailures": true
                    }
                ]
            },
            "osx": {
                "type": "cppdbg",
                "MIMode": "lldb",
            },
            "windows": {
                "type": "cppvsdbg",
                "logging": {
                    "engineLogging": true,
                    "trace": true,
                    "traceResponse": true
                },
                "externalConsole": true
            }
        }
    ]
}
